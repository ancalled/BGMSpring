        <filter-class>kz.bgm.platform.web.controllers.AdminAuthorizeFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>adminFilter</filter-name>
        <url-pattern>/mvc/admin/*</url-pattern>
